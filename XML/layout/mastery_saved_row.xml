<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/mastery_set_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mastery Set Name"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

	    <ImageView
	        android:id="@+id/offense_image"
	        android:layout_width="30dp"
	        android:layout_height="30dp"
	        android:layout_marginRight="5dp"
	        android:src="@drawable/m_mastery_offense" />
	    
		<TextView
	        android:id="@+id/offense_text"
	        android:layout_width="40dp"
	        android:layout_height="wrap_content"
	        android:text="00"
	        android:layout_marginRight="10dp"
	        android:textSize="20sp" />
		
	    <ImageView
	        android:id="@+id/defense_image"
	        android:layout_width="30dp"
	        android:layout_height="30dp"
	        android:layout_marginRight="5dp"
	        android:src="@drawable/m_mastery_defense" />
	    
		<TextView
	        android:id="@+id/defense_text"
	        android:layout_width="40dp"
	        android:layout_height="wrap_content"
	        android:text="00"
	        android:layout_marginRight="10dp"
	        android:textSize="20sp" />
		
	    <ImageView
	        android:id="@+id/utility_image"
	        android:layout_width="30dp"
	        android:layout_height="30dp"
	        android:layout_marginRight="5dp"
	        android:src="@drawable/m_mastery_utility" />

	    <TextView
	        android:id="@+id/utility_text"
	        android:layout_width="40dp"
	        android:layout_height="wrap_content"
	        android:text="00"
	        android:layout_marginRight="10dp"
	        android:textSize="20sp" />

    
    </LinearLayout>

</LinearLayout>
