<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/build_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Build Name" />
    
		<LinearLayout 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
       		android:layout_marginTop="3dp"
		    android:orientation="horizontal" >
		    
		    <ImageView
		        android:id="@+id/champion_image"
		        android:layout_width="50dp"
		        android:layout_height="50dp"
		        android:src="@drawable/c_blank" />
		    <TextView
		        android:id="@+id/champion_info"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Champion Info" />

		</LinearLayout>
		
		<TextView
	        android:id="@+id/item_set_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Item Set Name" />
		
		<LinearLayout 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
        	android:layout_marginTop="5dp"
		    android:orientation="horizontal" >
		
			<ImageView
		        android:id="@+id/item_image1"
		        android:layout_width="45dp"
		        android:layout_height="45dp"
		        android:src="@drawable/i_blankspace" />
			<ImageView
		        android:id="@+id/item_image2"
		        android:layout_width="45dp"
		        android:layout_height="45dp"
		        android:src="@drawable/i_blankspace" />
			<ImageView
		        android:id="@+id/item_image3"
		        android:layout_width="45dp"
		        android:layout_height="45dp"
		        android:src="@drawable/i_blankspace" />
			<ImageView
		        android:id="@+id/item_image4"
		        android:layout_width="45dp"
		        android:layout_height="45dp"
		        android:src="@drawable/i_blankspace" />
			<ImageView
		        android:id="@+id/item_image5"
		        android:layout_width="45dp"
		        android:layout_height="45dp"
		        android:src="@drawable/i_blankspace" />
			<ImageView
		        android:id="@+id/item_image6"
		        android:layout_width="45dp"
		        android:layout_height="45dp"
		        android:src="@drawable/i_blankspace" />


		</LinearLayout>
		
	<TextView
        android:id="@+id/mastery_page_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mastery Page Name" />
		
    <TextView
        android:id="@+id/rune_page_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Rune Page Name" />
		
		
		
</LinearLayout>