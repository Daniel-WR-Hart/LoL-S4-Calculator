<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/overall_background">
    
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

			<LinearLayout 
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		   		android:orientation="horizontal" >
		    
			    <ImageView
			        android:id="@+id/champion_image"
			        android:layout_width="50dp"
			        android:layout_height="50dp"
			        android:src="@drawable/c_blank" />
			    <TextView
			        android:id="@+id/champion_info"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
	        	android:textSize="16sp"
			        android:text="Champion Info" />

			</LinearLayout>
	
			<LinearLayout 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal" >
			
				<ImageView
			        android:id="@+id/item_image1"
			        android:layout_width="45dp"
			        android:layout_height="45dp"
			        android:src="@drawable/i_blankspace" />
				<ImageView
			        android:id="@+id/item_image2"
			        android:layout_width="45dp"
			        android:layout_height="45dp"
			        android:src="@drawable/i_blankspace" />
				<ImageView
			        android:id="@+id/item_image3"
			        android:layout_width="45dp"
			        android:layout_height="45dp"
			        android:src="@drawable/i_blankspace" />
				<ImageView
			        android:id="@+id/item_image4"
			        android:layout_width="45dp"
			        android:layout_height="45dp"
			        android:src="@drawable/i_blankspace" />
				<ImageView
			        android:id="@+id/item_image5"
			        android:layout_width="45dp"
			        android:layout_height="45dp"
			        android:src="@drawable/i_blankspace" />
				<ImageView
			        android:id="@+id/item_image6"
			        android:layout_width="45dp"
			        android:layout_height="45dp"
			        android:src="@drawable/i_blankspace" />
	
	
			</LinearLayout>
			
			<TextView
	       		android:id="@+id/all_stats"
	        	android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:textSize="18sp"
	        	android:text="All Stats" />

        </LinearLayout>
        
    </ScrollView>
                              
</LinearLayout>
		 
   
