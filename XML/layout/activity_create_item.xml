<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="danielhartomgitsmiketyson.loldpscalculator.CreateItemSetActivity"
    tools:ignore="MergeRootFrame" 
    android:background="@drawable/overall_background">

    <GridView
        android:id="@+id/gridViewItemSelect"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_weight="1.90"
        android:numColumns="3" >

    </GridView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.31"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/item_slot_1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/i_blankspace" />

        <ImageView
            android:id="@+id/item_slot_2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/i_blankspace" />

        <ImageView
            android:id="@+id/item_slot_3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/i_blankspace" />

        <ImageView
            android:id="@+id/item_slot_4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/i_blankspace" />

        <ImageView
            android:id="@+id/item_slot_5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/i_blankspace" />

        <ImageView
            android:id="@+id/item_slot_6"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/i_blankspace" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.22"
        android:gravity="center"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/item_set_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Item Set Name" >
        </EditText>
    </LinearLayout>

</LinearLayout>